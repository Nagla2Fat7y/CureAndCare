@model Category

@{
    ViewData["Title"] = "Edit Category";
    Layout = "~/Views/Shared/_DefualtLayout.cshtml";
}

<style>
    body {
        background: linear-gradient(to right, #10b981, #06b6d4);
        min-height: 100vh;
    }

    .custom-card {
        background-color: #f0fdfa;
        border: 1px solid #ccfbf1;
    }

    .custom-header {
        background: linear-gradient(to right, #10b981, #06b6d4);
        color: #ffffff;
    }

    .custom-btn-primary {
        background-color: #10b981;
        border-color: #10b981;
    }

        .custom-btn-primary:hover {
            background-color: #059669;
            border-color: #059669;
        }

    .custom-btn-secondary {
        border-color: #06b6d4;
        color: #06b6d4;
    }

        .custom-btn-secondary:hover {
            background-color: #e0f2fe;
            border-color: #0284c7;
            color: #0284c7;
        }

    .form-label {
        color: #064e3b;
    }

    .form-control:focus {
        border-color: #06b6d4;
        box-shadow: 0 0 0 0.2rem rgba(6, 182, 212, 0.25);
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg custom-card animate__animated animate__zoomIn">
                <div class="card-header custom-header text-center">
                    <h2 class="mb-0">Edit Category</h2>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <input type="hidden" asp-for="Cat_ID" />

                        <div class="mb-4">
                            <label asp-for="Cat_Name" class="form-label fw-bold">Category Name</label>
                            <input asp-for="Cat_Name" class="form-control form-control-lg" />
                            <span asp-validation-for="Cat_Name" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-bold">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn custom-btn-primary btn-lg px-4">Update</button>
                            <a asp-action="Index" class="btn custom-btn-secondary btn-lg px-4">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
