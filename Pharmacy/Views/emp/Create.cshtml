@model emp

@{
    ViewData["Title"] = "Create Pharmacist";
    Layout = "~/Views/Shared/_DefualtLayout.cshtml";
}

<!-- Bootstrap 5 CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        background: linear-gradient(to right, #10b981, #06b6d4);
        min-height: 100vh;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .custom-card {
        background-color: #f0fdfa;
        border: 1px solid #ccfbf1;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        padding: 2rem;
        max-width: 700px;
        margin: 2rem auto;
    }

    .nav-tabs .nav-link.active {
        background: linear-gradient(to right, #10b981, #06b6d4);
        color: white;
        border-radius: 8px 8px 0 0;
        border-color: #06b6d4 #06b6d4 #fff;
        font-weight: 600;
    }

    .nav-tabs .nav-link {
        color: #064e3b;
        font-weight: 600;
        border-radius: 8px 8px 0 0;
    }

    .tab-content {
        border: 1px solid #ccfbf1;
        border-top: none;
        background: #f0fdfa;
        border-radius: 0 0 12px 12px;
        padding: 1.5rem;
    }

    label.form-label {
        font-weight: 600;
        color: #064e3b;
    }

    input.form-control, select.form-select {
        border-radius: 6px;
        border: 1px solid #ced4da;
        padding: 0.75rem;
        width: 100%;
        font-size: 1rem;
        transition: border-color 0.2s ease, box-shadow 0.2s ease;
    }

        input.form-control:focus, select.form-select:focus {
            border-color: #06b6d4;
            box-shadow: 0 0 8px rgba(6, 182, 212, 0.3);
            outline: none;
        }

    .text-danger {
        font-size: 0.875rem;
        color: #dc3545;
        margin-top: 0.25rem;
    }

    .btn-primary {
        background-color: #10b981;
        border-color: #10b981;
        padding: 0.75rem 1.5rem;
        font-weight: 600;
        border-radius: 6px;
        color: #fff;
        max-width: 160px;
        width: 100%;
        transition: background-color 0.2s ease;
    }

        .btn-primary:hover {
            background-color: #059669;
            border-color: #059669;
        }

    .btn-secondary {
        border-color: #06b6d4;
        color: #06b6d4;
        padding: 0.75rem 1.5rem;
        font-weight: 600;
        border-radius: 6px;
        max-width: 160px;
        width: 100%;
        text-align: center;
        text-decoration: none;
        background-color: transparent;
        transition: background-color 0.2s ease, color 0.2s ease;
    }

        .btn-secondary:hover {
            background-color: #e0f2fe;
            border-color: #0284c7;
            color: #0284c7;
        }

    .buttons-group {
        display: flex;
        justify-content: center;
        gap: 1rem;
        margin-top: 1.5rem;
    }

    @@media (max-width: 576px) {
        .custom-card

    {
        padding: 1rem;
        margin: 1rem;
    }

    .buttons-group {
        flex-direction: column;
    }

    }
</style>

<div class="custom-card">
    <h2 class="mb-4 text-center" style="color:#064e3b;">Create Pharmacist</h2>

    <ul class="nav nav-tabs" id="pharmacistTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="personal-tab" data-bs-toggle="tab" data-bs-target="#personal" type="button" role="tab" aria-controls="personal" aria-selected="true">Personal Info</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="work-tab" data-bs-toggle="tab" data-bs-target="#work" type="button" role="tab" aria-controls="work" aria-selected="false">Work Info</button>
        </li>
    </ul>

    <form asp-action="Create" asp-controller="emp" method="post" novalidate>
        <div class="tab-content" id="pharmacistTabContent">
            <div class="tab-pane fade show active" id="personal" role="tabpanel" aria-labelledby="personal-tab">
                <div class="mb-3">
                    <label asp-for="UserName" class="form-label">Name</label>
                    <input asp-for="UserName" class="form-control" placeholder="Enter name" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" type="Email" placeholder="example@example.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Phone" class="form-label">Phone</label>
                    <input asp-for="Phone" class="form-control" placeholder="Enter phone number" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Address" class="form-label">Address</label>
                    <input asp-for="Address" class="form-control" placeholder="Enter address" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>

            <div class="tab-pane fade" id="work" role="tabpanel" aria-labelledby="work-tab">
                <div class="mb-3">
                    <label asp-for="PasswordHash" class="form-label">Password</label>
                    <input asp-for="PasswordHash" class="form-control" type="password" placeholder="Enter password" />
                    <span asp-validation-for="PasswordHash" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Permission_Level" class="form-label">Permission Level</label>
                    <input asp-for="Permission_Level" class="form-control" placeholder="Enter permission level" />
                    <span asp-validation-for="Permission_Level" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Salary" class="form-label">Salary</label>
                    <input asp-for="Salary" class="form-control" type="number" min="0" placeholder="Enter salary" />
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Shift" class="form-label">Shift</label>
                    <select asp-for="Shift" class="form-select">
                        <option value="">-- Select Shift --</option>
                        <option value="Morning">Morning</option>
                        <option value="Night">Night</option>
                    </select>
                    <span asp-validation-for="Shift" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="HireDate" class="form-label">Hire Date</label>
                    <input asp-for="HireDate" class="form-control" type="date" />
                    <span asp-validation-for="HireDate" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="buttons-group">
            <button type="submit" class="btn btn-primary">Create Pharmacist</button>
            <a asp-action="Index" asp-controller="emp" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
