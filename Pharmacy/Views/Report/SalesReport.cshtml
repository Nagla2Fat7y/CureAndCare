@model Pharmacy.ViewModels.SalesReportViewModel

@{
    ViewData["Title"] = "Sales Report";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Cure & Care</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            background-color: #f1f5f9;
            font-family: 'Segoe UI', sans-serif;
            padding: 40px;
        }

        .report-container {
            background-color: #fff;
            padding: 30px;
            border-radius: 16px;
            box-shadow: 0 6px 18px rgba(0, 0, 0, 0.08);
            animation: fadeIn 0.6s ease-in-out;
        }

        h3 {
            color: #0f766e;
            font-weight: 700;
        }

        label {
            font-weight: 600;
            color: #334155;
        }

        .table-primary th {
            background: linear-gradient(to right, #0f766e, #0e4f4f);
            color: white;
        }

        .table th, .table td {
            text-align: center;
            vertical-align: middle;
        }

        .btn-print {
            background-color: #0f766e;
            color: white;
            font-weight: 600;
            padding: 8px 20px;
            border-radius: 10px;
        }

            .btn-print:hover {
                background-color: #115e59;
            }

        .btn-back {
            background-color: #64748b;
            color: white;
            font-weight: 600;
            padding: 8px 20px;
            border-radius: 10px;
        }

            .btn-back:hover {
                background-color: #475569;
            }

        .alert-warning {
            margin-top: 20px;
        }

        @@media print {
            form, .btn-print, .btn-back, hr

        {
            display: none !important;
        }

        body {
            background: white !important;
            padding: 0;
        }

        .report-container {
            box-shadow: none;
            padding: 0;
        }

        .table th {
            background-color: #e2e8f0 !important;
            color: black !important;
        }

        }

        @@keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }
    </style>
</head>
<body>
    <div class="container">
        <div class="report-container">
            <h3><i class="fa fa-chart-bar me-2"></i>Sales Report</h3>
            <small class="text-muted">Showing sales based on selected date range</small>
            <hr />

            <!-- 🔎 Filter Form -->
            <form method="get" asp-action="SalesReport">
                <div class="row mb-4">
                    <div class="col-md-4">
                        <label for="startDate">Start Date:</label>
                        <input type="date" name="startDate" class="form-control"
                               value="@(Model.StartDate?.ToString("yyyy-MM-dd"))" />
                    </div>
                    <div class="col-md-4">
                        <label for="endDate">End Date:</label>
                        <input type="date" name="endDate" class="form-control"
                               value="@(Model.EndDate?.ToString("yyyy-MM-dd"))" />
                    </div>
                    <div class="col-md-4 d-flex align-items-end">
                        <button type="submit" class="btn btn-success w-100">
                            <i class="fa fa-filter me-1"></i> Filter
                        </button>
                    </div>
                </div>
            </form>

            <!-- 📊 Table or Message -->
            @if (Model.SalesItems == null || !Model.SalesItems.Any())
            {
                <div class="alert alert-warning text-center">
                    <i class="fa fa-exclamation-circle me-2"></i>No sales found for the selected date range.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead class="table-primary">
                            <tr>
                                <th>SL</th>
                                <th>Invoice Number</th>
                                <th>Invoice Date</th>
                                <th>Customer Name</th>
                                <th>Net Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.SalesItems.Count; i++)
                            {
                                <tr>
                                    <td>@(i + 1)</td>
                                    <td>@Model.SalesItems[i].InvoiceNumber</td>
                                    <td>@Model.SalesItems[i].InvoiceDate.ToString("yyyy-MM-dd")</td>
                                    <td>@Model.SalesItems[i].CustomerName</td>
                                    <td>@Model.SalesItems[i].NetTotal.ToString("C")</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="4" class="text-end fw-bold text-success">Total Sales:</td>
                                <td class="fw-bold">@Model.TotalSales.ToString("C")</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            }

            <!-- 🖨 Print & Back Buttons -->
            <div class="d-flex justify-content-between mt-4">
                <a href="@Url.Action("Index", "Dashboard")" class="btn btn-primary" style="margin-top: 20px;">
                    ⬅️ Back to Dashboard
                </a>
                <button class="btn btn-print" onclick="window.print()">
                    <i class="fa fa-print me-1"></i> Print
                </button>
            </div>
        </div>
    </div>
</body>
</html>
