@model Supplier
@{
    ViewData["Title"] = "Edit Supplier";
    Layout = "_DefualtLayout";

}

<!-- animate.css -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

<div class="container mt-5 animate__animated animate__fadeIn">
    <h2 class="mb-3 text-warning">Edit Supplier</h2>
    <h5 class="text-muted mb-4">Update supplier details below</h5>
    <hr />

    <form asp-action="Edit" asp-controller="Supplier" method="post" class="needs-validation">
        <input type="hidden" asp-for="Sup_ID" />

        <div class="form-group mb-3">
            <label asp-for="Sup_Name" class="form-label">Supplier Name</label>
            <input asp-for="Sup_Name" class="form-control" />
            <span asp-validation-for="Sup_Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Sup_Phone" class="form-label">Phone</label>
            <input asp-for="Sup_Phone" class="form-control" />
            <span asp-validation-for="Sup_Phone" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="Sup_Mail" class="form-label">Email</label>
            <input asp-for="Sup_Mail" class="form-control" />
            <span asp-validation-for="Sup_Mail" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-warning me-2">
            <i class="fas fa-save"></i> Save Changes
        </button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

<!-- Font Awesome (icons) -->
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
