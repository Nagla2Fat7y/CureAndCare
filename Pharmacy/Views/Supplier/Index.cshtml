@model IEnumerable<Supplier>

@{
    ViewData["Title"] = "Manage Suppliers";
    Layout = "~/Views/Shared/_DefualtLayout.cshtml";

    int sl = 1;
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<style>
    /* Background and font */
    body {
        background: linear-gradient(to right, #10b981, #06b6d4);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #333;
    }

    /* Container */
    .container {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 2rem;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    /* Header */
    .text-primary {
        color: #fff;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.2);
        font-weight: 700;
        margin-bottom: 2rem;
        padding: 0.5rem;
        background: linear-gradient(to right, #10b981, #06b6d4);
        border-radius: 8px;
        text-align: center;
    }

    /* Buttons */
    .btn-success {
        background: linear-gradient(to right, #10b981, #06b6d4);
        border: none;
        padding: 0.75rem 1.5rem;
        font-weight: 600;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .btn-success:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(0,0,0,0.2);
        }

    .btn-info {
        background-color: #0d6efd;
        border-color: #0d6efd;
        padding: 0.4rem 0.8rem;
        font-weight: 600;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .btn-info:hover {
            background-color: #0b5ed7;
            border-color: #0a58ca;
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(0,0,0,0.2);
        }

    .btn-danger {
        background-color: #dc2626;
        border-color: #dc2626;
        padding: 0.4rem 0.8rem;
        font-weight: 600;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .btn-danger:hover {
            background-color: #b91c1c;
            border-color: #b91c1c;
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(0,0,0,0.2);
        }

    /* Table */
    .table {
        background: #fff;
        border-radius: 8px;
        overflow: hidden;
        border-collapse: separate;
        border-spacing: 0;
    }

        .table thead {
            background: linear-gradient(to right, #10b981, #06b6d4);
            color: #fff;
        }

        .table th, .table td {
            padding: 1rem;
            text-align: center;
            vertical-align: middle;
        }

        .table tbody tr {
            transition: background 0.2s ease;
        }

            .table tbody tr:hover {
                background: #f1f5f9;
            }

    /* Search input group */
    .input-group input.form-control {
        border-radius: 4px 0 0 4px;
    }

    .input-group button.btn {
        border-radius: 0 4px 4px 0;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .table th, .table td

    {
        font-size: 0.9rem;
        padding: 0.5rem;
    }

    .btn-success, .btn-info, .btn-danger {
        padding: 0.5rem 1rem;
        font-size: 0.9rem;
    }

    }
</style>

<div class="container animate__animated animate__fadeIn">
    <h2 class="text-primary">
        <i class="fas fa-users-cog me-2"></i>Manage Suppliers
    </h2>

    <div class="d-flex justify-content-end mb-4">
        <a asp-action="Create" class="btn btn-success animate__animated animate__fadeIn">
            <i class="fas fa-plus me-2"></i> Add New Supplier
        </a>
    </div>

    <form asp-action="Search" method="get" class="mb-3">
        <div class="input-group">
            <input type="text" name="searchString" class="form-control" placeholder="Search Supplier" />
            <button type="submit" class="btn btn-outline-primary">Search</button>
        </div>
    </form>

    <table class="table table-bordered table-striped animate__animated animate__fadeInUp">
        <thead>
            <tr>
                <th>SL</th>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Contact Number</th>
                <th style="width: 140px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var supplier in Model)
            {
                <tr>
                    <td>@sl</td>
                    <td>@supplier.Sup_ID</td>
                    <td>@supplier.Sup_Name</td>
                    <td>@supplier.Sup_Mail</td>
                    <td>@supplier.Sup_Phone</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@supplier.Sup_ID" class="btn btn-info btn-sm me-1" title="Edit">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@supplier.Sup_ID" class="btn btn-danger btn-sm" title="Delete">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
                sl++;
            }
        </tbody>
    </table>
</div>
