@model IEnumerable<Customer>

@{
    ViewData["Title"] = "Customers";
    Layout = "~/Views/Shared/_DefualtLayout.cshtml";
}

<style type="text/css">
    /* Custom styles for professional look */
    body {
        background: linear-gradient(to right, #10b981, #06b6d4);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #333;
    }

    .container {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 2rem;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    h2.text-primary {
        color: #fff;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);
        font-weight: 700;
        margin-bottom: 2rem;
        padding: 0.5rem;
        background: linear-gradient(to right, #10b981, #06b6d4);
        border-radius: 8px;
        text-align: center;
    }

    .btn-success {
        background: linear-gradient(to right, #10b981, #06b6d4);
        border: none;
        padding: 0.75rem 1.5rem;
        font-weight: 600;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .btn-success:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

    .table {
        background: #fff;
        border-radius: 8px;
        overflow: hidden;
        border-collapse: separate;
        border-spacing: 0;
    }

        .table thead {
            background: linear-gradient(to right, #10b981, #06b6d4);
            color: #fff;
        }

        .table th, .table td {
            padding: 1rem;
            text-align: center;
            vertical-align: middle;
        }

        .table tbody tr {
            transition: background 0.2s ease;
        }

            .table tbody tr:hover {
                background: #f1f5f9;
            }

    .btn-warning, .btn-danger {
        padding: 0.5rem 1rem;
        font-weight: 600;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .btn-warning:hover, .btn-danger:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

    .btn-warning {
        background-color: #f59e0b;
        border-color: #f59e0b;
        color: white;
    }

    .btn-danger {
        background-color: #dc2626;
        border-color: #dc2626;
        color: white;
    }

    /* Media query for responsiveness */
    @@media (max-width: 768px) {
        .table th, .table td

    {
        font-size: 0.9rem;
        padding: 0.5rem;
    }

    .btn-success, .btn-warning, .btn-danger {
        padding: 0.5rem 1rem;
        font-size: 0.9rem;
    }

    }

    /* Search box style */
    .search-box {
        margin-bottom: 1.5rem;
        text-align: right;
    }

        .search-box input[type="text"] {
            width: 250px;
            padding: 0.5rem 0.75rem;
            border-radius: 6px;
            border: 1px solid #ced4da;
            transition: border-color 0.2s ease, box-shadow 0.2s ease;
        }

            .search-box input[type="text"]:focus {
                border-color: #06b6d4;
                box-shadow: 0 0 8px rgba(6, 182, 212, 0.3);
                outline: none;
            }


    .custom-delete-btn {
        background: linear-gradient(45deg, #dc2626, #b91c1c);
        border: none;
        color: white;
        font-weight: 600;
        padding: 0.4rem 1rem;
        border-radius: 6px;
        box-shadow: 0 4px 8px rgba(220, 38, 38, 0.4);
        transition: background 0.3s ease, box-shadow 0.3s ease, transform 0.2s ease;
    }

        .custom-delete-btn:hover {
            background: linear-gradient(45deg, #b91c1c, #7f1d1d);
            box-shadow: 0 6px 12px rgba(185, 28, 28, 0.7);
            transform: translateY(-2px);
            color: #fff;
        }

        .custom-delete-btn i {
            vertical-align: middle;
        }

</style>

<div class="container animate__animated animate__fadeIn">
    <h2 class="text-primary">Customers</h2>

    <div class="search-box">
        @using (Html.BeginForm("Search", "Customer", FormMethod.Get))
        {
            <input type="text" name="searchString" placeholder="Search Customer" value="@ViewBag.SearchString" />
        }
    </div>

    <table class="table table-bordered table-striped animate__animated animate__fadeInUp">
        <thead>
            <tr>
                <th>SL.</th>
                <th>Customer ID</th>
                <th>Customer Name</th>
                <th>Contact Number</th>
                <th>Address</th>
                <th>Loyalty Points</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                int serial = 1;
            }
            @foreach (var item in Model)
            {
                <tr>
                    <td>@serial</td>
                    <td>@item.Customer_Id</td>
                    <td>@item.Name</td>
                    <td>@item.Phone</td>
                    <td>@item.Add</td>
                    <td>@item.Loyalty_Points</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Customer_Id" class="btn btn-warning btn-sm me-1 animate__animated animate__fadeInLeft">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Customer_Id"
                           class="btn btn-danger btn-sm animate__animated animate__fadeInRight"
                           onclick="return confirm('Are You sure you want to delete this custome...!');"
                           title="Delete Customer">
                            <i class="fas fa-trash-alt"></i> Delete
                        </a>
                    </td>
                    <td>
                        <a asp-controller="Customer" asp-action="Purchases" asp-route-id="@item.Customer_Id" class="btn btn-sm btn-primary">
                            <i class="bi bi-cart"></i> View Purchases
                        </a>
                    </td>
                </tr>
                serial++;
            }
        </tbody>
    </table>
</div>

<!-- Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
