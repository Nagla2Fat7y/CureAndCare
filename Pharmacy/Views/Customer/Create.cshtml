@model Customer

@{
    ViewData["Title"] = "Create Customer";
    Layout = "~/Views/Shared/_DefualtLayout.cshtml";
}

<style>
    /* Body and container styling */
    body {
        background: linear-gradient(to right, #10b981, #06b6d4);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #333;
        min-height: 100vh;
    }

    .container {
        max-width: 600px;
        margin: 3rem auto;
    }

    .custom-card {
        background-color: #f0fdfa;
        border: 1px solid #ccfbf1;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        padding: 2rem;
    }

    .custom-header {
        background: linear-gradient(to right, #10b981, #06b6d4);
        color: #ffffff;
        border-radius: 8px;
        padding: 1rem;
        text-align: center;
        font-weight: 700;
        font-size: 1.75rem;
        margin-bottom: 2rem;
        user-select: none;
    }

    /* Form elements */
    .form-label {
        font-weight: 600;
        color: #064e3b;
        margin-bottom: 0.5rem;
        display: block;
    }

    input.form-control {
        border-radius: 6px;
        border: 1px solid #ced4da;
        padding: 0.75rem;
        transition: border-color 0.2s ease, box-shadow 0.2s ease;
        font-size: 1rem;
        width: 100%;
    }

        input.form-control:focus {
            border-color: #06b6d4;
            box-shadow: 0 0 8px rgba(6, 182, 212, 0.3);
            outline: none;
        }

    .text-danger {
        font-size: 0.875rem;
        margin-top: 0.25rem;
        color: #dc3545;
    }

    /* Buttons */
    .btn-primary {
        background-color: #10b981;
        border: none;
        padding: 0.75rem 1.5rem;
        font-weight: 600;
        border-radius: 6px;
        transition: background-color 0.2s ease, box-shadow 0.2s ease, transform 0.2s ease;
        color: #fff;
        width: 100%;
        max-width: 140px;
    }

        .btn-primary:hover {
            background-color: #059669;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            transform: translateY(-2px);
        }

    .btn-secondary {
        background-color: transparent;
        border: 2px solid #06b6d4;
        color: #06b6d4;
        padding: 0.75rem 1.5rem;
        font-weight: 600;
        border-radius: 6px;
        transition: background-color 0.2s ease, color 0.2s ease, transform 0.2s ease, box-shadow 0.2s ease;
        text-decoration: none;
        width: 100%;
        max-width: 140px;
        text-align: center;
    }

        .btn-secondary:hover {
            background-color: #e0f2fe;
            border-color: #0284c7;
            color: #0284c7;
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            text-decoration: none;
        }

    /* Spacing */
    .mb-4 {
        margin-bottom: 1.5rem !important;
    }

    .d-flex {
        display: flex !important;
    }

    .gap-2 {
        gap: 0.5rem;
    }

    /* Responsive */
    @@media (max-width: 576px) {
        .container

    {
        margin: 1rem;
    }

    input.form-control,
    .btn-primary, .btn-secondary {
        font-size: 0.9rem;
        padding: 0.5rem 1rem;
    }

    .custom-header {
        font-size: 1.5rem;
        padding: 0.75rem;
        margin-bottom: 1.5rem;
    }

    .btn-primary, .btn-secondary {
        max-width: 100%;
    }

    }
</style>

<div class="container animate__animated animate__fadeInUp">
    <div class="custom-card animate__animated animate__fadeInUp">
        <div class="custom-header">
            Create Customer
        </div>

        <form asp-action="Create" asp-controller="Customer" method="post">
            <div class="mb-4">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Phone" class="form-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Add" class="form-label">Address</label>
                <input asp-for="Add" class="form-control" />
                <span asp-validation-for="Add" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Loyalty_Points" class="form-label"></label>
                <input asp-for="Loyalty_Points" type="number" class="form-control" />
                <span asp-validation-for="Loyalty_Points" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2 justify-content-center">
                <button type="submit" class="btn btn-primary animate__animated animate__fadeInLeft">Create</button>
                <a asp-action="Index" asp-controller="Customer" class="btn btn-secondary animate__animated animate__fadeInRight">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
